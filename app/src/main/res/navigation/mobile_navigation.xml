<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.namvar.nederlandsles.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_letters"
        android:name="com.namvar.nederlandsles.ui.letters.LettersFragment"
        android:label="@string/title_letters"
        tools:layout="@layout/fragment_letters" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.namvar.nederlandsles.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_hoofdstuk"
        android:name="com.namvar.nederlandsles.ui.home.HoofdstukFragment"
        android:label="hoofdstuk"
        tools:layout="@layout/fragment_hoofdstuk">
        <argument
            android:name="section"
            app:argType="string"
            android:defaultValue="@null" />
    </fragment>

    <fragment android:id="@+id/navigation_show_letter"
        android:name="com.namvar.nederlandsles.ui.letters.ShowLetterFragment"
        android:label="Briefje"
        tools:layout="@layout/fragment_show_letter">
        <argument
            android:name="letterTitle"
            app:argType="string"
            android:defaultValue="@null"
            />
        <argument
            android:name="letterNo"
            app:argType="integer"
            />
    </fragment>


</navigation>