<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.namvar.nederlandsles.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_letters"
        android:name="com.namvar.nederlandsles.ui.letters.LettersFragment"
        android:label="@string/title_letters"
        tools:layout="@layout/fragment_letters" />

    <fragment
        android:id="@+id/navigation_cards"
        android:name="com.namvar.nederlandsles.ui.cards.CardsFragment"
        android:label="@string/title_cards"
        tools:layout="@layout/fragment_cards" />

    <fragment
        android:id="@+id/navigation_phrases"
        android:name="com.namvar.nederlandsles.ui.home.PhrasesFragment"
        android:label="hoofdstuk"
        tools:layout="@layout/fragment_phrases">
        <argument
            android:name="section"
            android:defaultValue="@null"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/navigation_show_letter"
        android:name="com.namvar.nederlandsles.ui.letters.ShowLetterFragment"
        android:label="Briefje"
        tools:layout="@layout/fragment_show_letter">
        <argument
            android:name="letterTitle"
            android:defaultValue="@null"
            app:argType="string" />
        <argument
            android:name="letterNo"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/navigation_show_card"
        android:name="com.namvar.nederlandsles.ui.cards.ShowCardFragment"
        android:label="Kaarten"
        tools:layout="@layout/fragment_show_card">
        <argument
            android:name="cardTitle"
            android:defaultValue="@null"
            app:argType="string" />
        <argument
            android:name="cardNo"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/navigation_speaking"
        android:name="com.namvar.nederlandsles.ui.speaking.SpeakingFragment"
        android:label="Spreken"
        tools:layout="@layout/fragment_speaking" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.namvar.nederlandsles.ui.settings.SettingsFragment"
        android:label="Instellingen"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/navigation_privacy_policy"
        android:name="com.namvar.nederlandsles.ui.settings.PrivacyPolicyFragment"
        android:label="Privacy policy"
        tools:layout="@layout/fragment_privacy_policy" />

</navigation>